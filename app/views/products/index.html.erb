<h1>Products</h1>

<%= link_to "New Product", "/products/new" %>

<% @products.each do |product| %>
        <h2><%= link_to product.name, product %></h2>
        <p>Product Descpription: <%= product.description %></p>
        <p>Price: <%= number_to_currency(product.formatted_price) %></p>
<% end %>